= simple_form_for @story, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :description
  = f.input :owner_id, label: 'Owner', collection: User.all.collect {|u| [u.email, u.id]}
  = f.input :performer_id, label: 'Perfomer', collection: User.all.collect {|u| [u.email, u.id]}
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), stories_path, :class => 'btn'
